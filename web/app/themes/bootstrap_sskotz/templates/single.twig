{% extends "base.twig" %}
{% block head %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ site.theme.link }}//assets/css/single.css" type="text/css" media="screen"/>
{% endblock %}

{% block content %}
	<section>
		<div class="content-wrapper">
			<article class="post-page-full">
				<header class="post-full-header">
					<div class="post-full-meta">
						<time class="post-full-meta-date" datetime="{{post.post_date_gmt}}">{{ post.date }}</time>
						<span class="date-divider">/</span>
						{% for cat in cats %}
							{% if cat.slug == 'banner' %}
								<a href="{{site.url}}/news/{{cat.slug}}" class="post-tag">{{cat.name}}</a>
							{% elseif cat.slug == 'event' %}
								<a href="{{site.url}}/news/{{cat.slug}}" class="post-tag">{{cat.name}}</a>
							{% elseif cat.slug == 'activity' %}
								<a href="{{site.url}}/news/{{cat.slug}}" class="post-tag">{{cat.name}}</a>
							{% elseif cat.slug == 'update' %}
								<a href="{{site.url}}/news/{{cat.slug}}" class="post-tag">{{cat.name}}</a>
							{% elseif cat.slug == 'news' %}
								<a href="{{site.url}}/news/{{cat.slug}}" class="post-tag">{{cat.name}}</a>
							{% else %}
								<a href="{{site.url}}/guides/{{cat.slug}}" class="post-tag">{{cat.name}}</a>
							{% endif %}
						{% endfor %}
					</div>
					<h1 class="post-full-title">{{post.title}}</h1>
				</header>
				<div class="pd-post-body">
					<div class="post-full-content">
						<div class="post-img">
							<img src="{{post.thumbnail.src}}" class="img-fluid">
						</div>
						<div class="post-content">
							{{post.content}}
						</div>
					</div>
					<footer class="post-full-footer">
						<div class="content">
							<a class="author-card" href='{{author.link}}'>
								<img class="author-profile-image" src="{{author.avatar}}" alt="{{author.name}}">
								<div class="author-card-content">
									<h4 class="author-card-name">
										<span>{{author.name}}</span>
									</h4>
									<p>
										{{author.roles}}
									</p>
								</div>
							</a>
						</div>
					</footer>
				</div>
			</article>
		</div>
	</section>
{% endblock %}
